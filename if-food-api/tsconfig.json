{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ES2020",
      "sourceMap": true,
      "outDir": "./build",
      "allowSyntheticDefaultImports": true,
      "rootDirs": ["src"],
      "baseUrl": "src",
      "strict": true,
      "paths": {
          "@domain/*": ["domain/*"],
          "@if-food-types/*": ["types/*"],
          "@controllers/*": ["controllers/*"],
          "@services/*": ["services/*"],
          "@database/*": ["database/*"],
          "@useCases/*": ["use-cases/*"],
          "@config/*": ["config/*"],
          "@utils/*": ["utils/*"],
          "@routes/*": ["routes/*"],
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
